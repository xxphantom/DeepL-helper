{
  "manifest_version": 3,
  "name": "DeepL Helper",
  "version": "1.0",
  "description": "Облегчает перевод с помощью расширения DeepL. Не нужно кликать по иконке, убирает перевод кириллицы.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ],
  "icons": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
  }
}

